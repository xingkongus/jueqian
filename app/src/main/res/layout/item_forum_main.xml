<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_forum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/forum_mainpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_icon_forum"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#ffffff"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/username_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="菠萝小莫s" />

                <ImageView
                    android:id="@+id/user_state_forum"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/teacher" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_forum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="@dimen/dp_8"
                android:text="问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/count_answer_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 回答" />

                <TextView
                    android:id="@+id/TAG1_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="android"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/TAG2_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="移动开发"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>