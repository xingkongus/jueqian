<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_icon_questionpage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#916a" />

        <TextView
            android:id="@+id/username_questionpage"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="菠萝小莫" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#6a7e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="XXXX-XX-XX XX:XX" />

    </LinearLayout>

    <TextView
        android:id="@+id/content_questionpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="我是回答的正文我是回答的正文我是回答的正文我是回答的正文我是回答的正文我是回答的正文我是回答的正文我是回答的正文我是回答的正文" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like_questionpage_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="赞同：999999" />

        <TextView
            android:id="@+id/comment_questionpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/like_questionpage_item"
            android:layout_toRightOf="@+id/like_questionpage_item"
            android:text="评论：999999" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#6a5b" />
    </RelativeLayout>


</LinearLayout>